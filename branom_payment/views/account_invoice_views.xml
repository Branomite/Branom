<odoo>
    <data>
        <record id="view_invoice_form_inherit_branom_payment" model="ir.ui.view">
            <field name="name">invoice.form.inherit.branom.payment</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
	      <xpath expr="//group[1]/group[1]" position="inside">
		<field name="payment_difference"/>
	      </xpath>
            </field>
        </record>

	<record id="view_invoice_supplier_form_inherit_branom_payment" model="ir.ui.view">
            <field name="name">invoice.supplier.form.inherit.branom.payment</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
	      <xpath expr="//group[1]/group[1]" position="inside">
		<field name="payment_difference"/>
	      </xpath>
            </field>
        </record>
    </data>
</odoo>

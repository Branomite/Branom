<odoo>
    <data>
        <record id="view_move_form_inherit_branom_payment" model="ir.ui.view">
            <field name="name">account.move.form.inherit.branom.payment</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[1]" position="inside">
                    <field name="payment_difference" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree[1]/field[@name='name']" position="after">
                    <field name="exclude_discount"/>
                </xpath>
            </field>
        </record>


<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="ckus_check_inherit" name="ckus_check_inherit" inherit_id="l10n_us_check_printing.ckus_check">
        <xpath expr="//div[hasclass('ckus_check')][1]" position="before">
            <style type="text/css">
                .ckus_top_page .ckus_payee_name,
                .ckus_top_page .ckus_memo {
                    display: none;
                }
                .ckus_top_page .ckus_payee_addr {
                    /* top: 1.65in; */
                    top: 1.78in;
                    /* left: 0.85in; */
                    left: 0.97in;
                }
                .ckus_top_page .ckus_amount_in_word {
                    /* top: 1.45in; */
                    top: 1.09in;
                    /* left: 0.25in; */
                    left: 0.85in;
                }
                .ckus_top_page .ckus_date {
                    /* top: 0.55in; */
                    top: 0.80in;
                    /* left: 6.51in; */
                    left: 5.76in;
                }
                .ckus_top_page .ckus_amount {
                    /* top: 1.07in; */
                    top: 1.47in;
                    /* left: 6.77in; */
                }
            </style>
        </xpath>
        <xpath expr="//div[hasclass('ckus_amount')]/t" position="attributes">
            <attribute name="t-esc">page['amount']</attribute>
        </xpath>
    </template>

    <template id="ckus_stub_inherit" name="ckus_stub_inherit" inherit_id="l10n_us_check_printing.ckus_stub">
        <xpath expr="//table[@t-if=&quot;page['stub_lines']&quot;]" position="replace">

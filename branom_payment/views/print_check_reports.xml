                .ckus_page .ckus_stub_1, .ckus_page .ckus_stub_2 {
                    height: 6.5in;
                }
                .ckus_page .ckus_stub_2 {
                    display: none;
                }
                .ckus_page .ckus_stub .summary_line,
                .ckus_page .stub_total_amount {

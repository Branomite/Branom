<odoo>
    <data>
        <record id="view_invoice_form_inherit_branom" model="ir.ui.view">
            <field name="name">invoice.form.inherit.branom</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group//group[2]" position="inside">
                    <field name="pricelist_id" domain="[('is_commission', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_account_form_inherit_branom" model="ir.ui.view">
            <field name="name">account.account.form.inherit.branom</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group//group" position="inside">
                    <field name="is_zero_comm"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_attribute_value_view_form_branom_inherit" model="ir.ui.view">
        <field name="name">product.template.attribute.value.view.form.branom.inherit</field>
        <field name="model">product.template.attribute.value</field>
        <field name="inherit_id" ref="product.product_template_attribute_value_view_form"/>
        <field name="arch" type="xml">
            <field name="price_extra" position="after">
                <field name="cost_extra" />
            </field>
        </field>
    </record>

    <record id="product_template_attribute_value_view_tree_branom_inherit" model="ir.ui.view">
        <field name="name">product.template.attribute.value.view.tree.branom.inherit</field>
        <field name="model">product.template.attribute.value</field>
        <field name="inherit_id" ref="product.product_template_attribute_value_view_tree"/>
        <field name="arch" type="xml">
            <field name="price_extra" position="after">
                <field name="cost_extra"/>
            </field>
        </field>
    </record>

    <!--View to add Prefix/Suffix Configuration-->
    <record id="variants_tree_view_branom_inherit" model="ir.ui.view">
        <field name="name">product.attribute.value.tree.inherit.branom</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product.variants_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="cost_extra"/>
                <field name="manufacture_code"/>
                <field name="position"/>
                <field name="separator"/>
                <field name="affix_type"/>
            </field>
        </field>
    </record>
</odoo>
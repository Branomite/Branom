<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_branom" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.branom</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h2[last()]" position="before">
                    <h2 groups="account.group_account_user">Commission</h2>
                    <div class="row mt16 o_settings_container" id="account_commission_settings"
                         groups="account.group_account_user">
                        <div class="col-12 col-lg-6 o_setting_box"
                             title="This allows you to choose the account tied to commission sales.">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Commission Sale Account</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="text-muted">
                                    Account used when sale is set to Sale Type: Commission
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="commission_account_id" class="col-lg-3 o_light_label"/>
                                        <field name="commission_account_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
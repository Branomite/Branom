<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">

    <record id="automatic_workflow_create_invoice_filter" model="ir.filters">
        <field name="name">Automatic Workflow Create Invoice on 100% Delivery Filter</field>
        <field name="model_id">sale.order</field>
        <field name="domain">[('state','in',['sale','done']),('invoice_status','=','to invoice'), ('percent_delivered', '&gt;', 99.5), ('percent_delivered', '&lt;', 100.5)]</field>
        <field name="user_id" ref="base.user_root" />
    </record>

</odoo>

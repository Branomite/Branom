<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherit.branom.ship.weight</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <field name="product_weight"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="before">
                <field name="product_weight"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-danger">product_weight == 0.0</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban//field[@name='product_uom_qty']" position="before">
                <field name="product_weight"/>
            </xpath>
        </field>
    </record>
</odoo>

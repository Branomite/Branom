<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.ship.weight</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']" position="before">
                <field name="product_weight"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree" position="attributes">
                <attribute name="decoration-danger">product_weight == 0.0</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/form//field[@name='product_uom_qty']" position="before">
                <field name="product_weight"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit.ship.weight</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="before">
                <field name="product_weight"/>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">product_weight == 0.0</attribute>
            </xpath>
        </field>
    </record>

</odoo>

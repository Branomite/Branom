<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="delivery_ups.view_order_form_inherit_delivery_ups"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ups_bill_my_account']" position="before">
                <!-- Is required to autofill UPS carrier information -->
                <field name="carrier_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
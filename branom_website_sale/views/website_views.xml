<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="website_view_website_form_inherit" model="ir.ui.view">
        <field name="name">view.website.form.inherit</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other']" position="inside">
                <field name="website_payment_reviewer_id"/>
            </xpath>
        </field>
    </record>

    <record id="website_view_website_tree_inherit" model="ir.ui.view">
        <field name="name">website.tree.inherit</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="website_payment_reviewer_id"/>
            </xpath>
        </field>
    </record>

</odoo>
